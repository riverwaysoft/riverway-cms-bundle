{% extends '@RiverwayCmsCore/admin/admin_base.html.twig' %}

{% block body %}
    <a class="btn btn-outline-primary"
       href="{{ path('slider_create') }}"
       data-toggle="modal"
       data-target="#admin-modal">Create</a>
    <br/>
    <br/>

    <ul class="list-group">
        {% for slider in sliders %}
            <li class="list-group-item">
                <a href="{{ path('slider_edit', {'id': slider.id}) }}">{{ slider.name }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}