{% block imperavi_widget %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>
    <script type="text/javascript">
        $(document).ready(
            function () {
                $("[data-imperavi]").redactor({
                    plugins: ['customfilemanager']
                })
            }
        );
    </script>
{% endblock %}

{% block file_widget %}
    {% spaceless %}

        {{ block('form_widget') }}
        {% if image_url is not null %}
            <div>
                <img src="{{ asset(image_url) | imagine_filter('thumb') }}" id="image_{{ id }}"/>
                {% if delete_route is defined %}
                <a href="{{ delete_route }}" id="link_{{ id }}">X</a>
            </div>
            <script>
                $(document).ready(function () {
                    $('#link_' + '{{ id }}').on("click", function (e) {
                        $.ajax({
                            url: '{{ delete_route }}',
                            type: 'POST',
                            success: function () {
                                $('#image_{{ id }}').parent().remove();
                            }
                        });
                        e.preventDefault();
                        return false;
                    })
                });
            </script>
        {% endif %}
        {% endif %}

    {% endspaceless %}
{% endblock %}

{% block form_label_class -%}
    col-sm-10
{%- endblock form_label_class %}