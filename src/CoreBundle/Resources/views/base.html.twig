<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% if article is defined %}
    <div itemscope itemtype="http://schema.org/Article">
        <meta itemprop="name" content="{{ article.title }}">
        <meta itemprop="articleSection" content="{{ schemaOrg.articleCategory}}">
        <meta itemprop="description" content="{{ schemaOrg.articleDescription }}"/>
        <meta itemprop="image" content="http://127.0.0.1:8000/uploads/images/redactor/2017-11-03/59fcbfff01360.jpeg"/>
        {#<meta itemprop="url" content="{{ url }}">#}
    </div>
    {% endif %}
    {% block meta_title %}
    {% if article is defined %}
        {% if article.metaDescription is not null %}
            <meta name="description" content="{{ article.metaDescription }}">
        {% endif %}
        {% if article.metaKeywords is not null %}
            <meta name="keywords" content="{{ article.metaKeywords }}">
        {% else %}
            <meta name="keywords" content="{{ article.title }}">
        {% endif %}
        {% if article.metaReferrer is not null %}
            <meta name="referrer" content="{{ article.metaReferrer }}">
        {% endif %}
    {% endif %}
    {% endblock %}
    {% block metas %}
        {{ ogp()|raw }}
    {% endblock %}
    {% block common_stylesheets %}
        {% include '@RiverwayCmsCore/_stylesheets.html.twig' %}
    {% endblock %}
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{#{{ dump(ogp()) }}#}
{% block riverway_cms_navbar %}
    <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <li class="nav-item nav-link">Logged in</li>

        {% if is_granted("ROLE_ADMIN") %}
            <li class="nav-item nav-link">
                <a href="{{ path('article_index') }}">
                    | Admin
                </a>
            </li>

        {% endif %}

    {% else %}
        <li class="nav-item nav-link">
            <a href="{{ path('login') }}">Log in</a>
        </li>
    {% endif %}
    </ul>
{% endblock %}

<div class="container-fluid">
    <div id="main">
        {% block body %}
        {% endblock %}

    </div>
</div>
{% include '@RiverwayCmsCore/_javascript.html.twig' %}
{% block javascripts %}{% endblock %}
</body>
</html>
