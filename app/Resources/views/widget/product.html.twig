<div id="{{ uniqueId }}" class="multiple-carousel carousel slide" data-ride="carousel">
    <div class="carousel-inner row w-100 mx-auto" role="listbox">
        {% for index,item in items %}
            {% if item.images[0] is defined %}

                <div class="carousel-item col-md-4 {{ (index==1) ? 'active' : '' }}">
                    <img class="img-fluid mx-auto d-block"
                         src="{{ image_prefix }}/{{ item.images[0].path }}"/>
                    <div class="carousel-caption d-none d-md-block">
                        {{ item.name }}<br />
                        Â£{{ (item.channelPrice/100)|number_format(2, '.', ',') }}
                    </div>
                </div>
            {% endif %}
        {% else %}
            No items...
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#{{ uniqueId }}" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#{{ uniqueId }}" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


